

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title }}</title>
  <meta name="description" content="Sustainable sourcing, Slow Food coffee & climate‑resilient Liberica/Excelsa projects for specialty coffee from Uganda. FOB East Africa – FCA Europe – DDP Europe.">
  <link rel="canonical" href="https://www.zuricaf.com/offers">
  <!-- Accent colour & basic typography -->
  <style>
@import url('https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&display=swap');

    :root { --accent: #E27D60; --fg: #333; --bg: #fff; --radius: 8px; }
    * { box-sizing: border-box; }
    body { margin: 0; font-family: "Karla", sans-serif; line-height: 1.6; color: var(--fg); background-color: var(--bg); }
    a { color: var(--accent); text-decoration: none; }
    a:hover { text-decoration: underline; }
    header, footer { background: #fafafa; border-bottom: 1px solid #eaeaea; }
    .wrapper { max-width: 720px; margin: 0 auto; padding: 1.5rem 1rem; }
    nav ul { list-style: none; padding: 0; margin: 0; display: flex; flex-wrap: wrap; gap: 1rem; font-weight: 500; }
    .btn { display: inline-block; padding: 0.75rem 1.5rem; border-radius: var(--radius); background: var(--accent); color: #fff; font-weight: 600; border: none; cursor: pointer; transition: background 0.2s ease-in-out; }
    .btn:hover { background: #cf6a4d; }
    .wide-block { display: flex; flex-direction: row; align-items: stretch; gap: 2rem; }
    .wide-block .content { flex: 1 1 50%; }
    .wide-block img { flex: 1 1 50%; object-fit: cover; width: 100%; height: auto; }
    .module-grid { display: grid; grid-template-columns: 40px 1fr; row-gap: 1.2rem; column-gap: 1rem; align-items: start; }
    .module-grid svg { stroke: var(--accent); flex-shrink: 0; }
    table.calendar { width: 100%; border-collapse: collapse; margin-top: 1rem; }
    .calendar th, .calendar td { border: 1px solid #e0e0e0; padding: 0.4rem 0.6rem; text-align: left; font-size: 0.9rem; }
    .calendar thead { background: #fafafa; }
    @media (max-width: 768px) { .wide-block { flex-direction: column; } .wide-block img { order: 1; } }
    /* Fluid images, never overflow the container */
    img, picture, video {
      max-width: 100%;
      height: auto;
      display: block;
    }
  
    .logo { height:72px; width:auto; }  
    @media (max-width: 768px){ .logo { height:56px; } }
    /* Optional: hero/wide image gets a nice cap + cover on large screens */
    .wide-block > img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }
    

  </style>
  <!-- Lucide icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
  <script src="https://unpkg.com/lucide@0.474.0/dist/umd/lucide.js"></script>
  <script>window.addEventListener('DOMContentLoaded',()=>{ if (window.lucide) { lucide.createIcons(); } });</script>

</head>
<header>
  <div class="wrapper header-row" style="display:flex;justify-content:space-between;align-items:center;gap:1rem;">
    <img
      src="{{ header.logo | default('/images/zuricaf.png') }}"
      alt="{{ header.logo_alt | default('Zuricaf Logo') }}"
      class="logo"
      style="height:100px;width:auto;" />
  <div> <br/>
    <nav id="site-nav" class="site-nav">
      <ul>
        {% for item in header.links or [] %}
          <li><a href="{{ item.href }}">{{ item.label }}</a></li>
        {% endfor %}
      </ul>
    </nav>
    </div>
  </div>
</header>

<body>
  {{ content | safe }}
  <script>lucide.createIcons();</script>
</body>

{% if template %}
  {% include template %}
{% else %}
  {{ content | safe }}
{% endif %}
</html>
